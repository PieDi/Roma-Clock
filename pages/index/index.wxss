/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.usermotto {
  margin-top: 200px;
}
.home {
  height: 100%;
  width: 100%;
  background-color: #000000;
  color: #71767D;
  position: relative;
  overflow: hidden;
}
.box-wrapper {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.circle-box {
  position: relative;
  transition: transform 0.4s ease-in-out;
}
.month-box {
  width: 30px;
  height: 30px;
}
.day-box {
  width: 80px;
  height: 80px;
}
.hour-box {
  width: 150px;
  height: 150px;
}
.minute-box {
  width: 220px;
  height: 220px;
}
.second-box {
  width: 300px;
  height: 300px;
}
.circle-span {
  position: absolute;
  white-space: nowrap;
  font-size: 7px;
  transform-origin: 0 0;
}
.circle-box .active {
  color: #fff;
}